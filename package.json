{
  "name": "pdf-reconstructor",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc --listEmittedFiles --pretty false && echo Build complete.",
    "cli": "ts-node --files src/cli/index.ts",
